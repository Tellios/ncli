{
  "name": "tellios-ncli",
  "version": "0.0.1",
  "description": "Helper scripts for easing workflow",
  "main": "index.js",
  "engines": {
    "node": ">= 6.10.3"
  },
  "bin": {
    "na": "./bin/alias",
    "ncode64": "./bin/ncode64",
    "ni": "./bin/node/ni",
    "nr": "./bin/node/nr",
    "nb": "./bin/node/nb",
    "nt": "./bin/node/nt",
    "nclone": "./bin/git/clone",
    "ncommit": "./bin/git/commit",
    "ncb": "./bin/git/createBranch",
    "ngcb": "./bin/git/getCurrentBranch",
    "ngb": "./bin/git/getBranches",
    "nmf": "./bin/git/mergeFrom",
    "nmt": "./bin/git/mergeTo",
    "nrb": "./bin/git/removeBranch",
    "nstatus": "./bin/git/status",
    "nsb": "./bin/git/switchBranch",
    "npull": "./bin/git/pull",
    "npush": "./bin/git/push",
    "nupstream": "./bin/git/setUpstream",
    "nd": "./bin/nd",
    "nk": "./bin/nk",
    "nsettings": "./bin/nsettings"
  },
  "scripts": {
    "prettier": "prettier --check --write \"{lib,src}/**/*.ts\"",
    "prettier:ci": "prettier -l \"{lib,src}/**/*.ts\"",
    "pretest": "npm run lint",
    "test": "jest",
    "test:watch": "jest --watchAll --runInBand",
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "build:watch": "tsc --watch -p tsconfig.build.json",
    "setup": "npm ci && npm run prettier && npm run test && npm run build && npm link",
    "lint": "eslint . --cache --fix --ext .ts,.tsx"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "chalk": "^4.1.0",
    "cli-table3": "^0.6.0",
    "concurrently": "^5.3.0",
    "execa": "^4.1.0",
    "fs-extra": "^9.0.1",
    "glob": "^7.1.6",
    "inquirer": "^7.3.3",
    "inquirer-autocomplete-prompt": "^1.3.0",
    "js-yaml": "^3.14.0",
    "lodash": "^4.17.20",
    "readline-sync": "^1.4.10",
    "yargs": "^16.1.0"
  },
  "devDependencies": {
    "@types/cli-table2": "^0.2.2",
    "@types/concurrently": "^6.2.1",
    "@types/fs-extra": "^9.0.3",
    "@types/glob": "^7.1.3",
    "@types/inquirer": "7.3.1",
    "@types/inquirer-autocomplete-prompt": "^1.3.0",
    "@types/jest": "^26.0.15",
    "@types/js-yaml": "^3.12.5",
    "@types/lodash": "^4.14.165",
    "@types/node": "^14.14.6",
    "@types/readline-sync": "^1.4.3",
    "@types/yargs": "^15.0.9",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.3",
    "typescript": "^4.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,md}": "prettier --write",
    "*.{ts}": "eslint --check --max-warnings 0 --fix"
  }
}
